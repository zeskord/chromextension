{
    "name": "Youtrack Assistant",
    "version": "1.0",
    "description": "Ассистент для работы с Youtrack",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "manifest_version": 2
}